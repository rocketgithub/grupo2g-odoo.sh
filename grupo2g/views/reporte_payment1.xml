<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="reporte_account_payment1">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">

                    <div style="font-size: 110%; position: absolute; top: 1.6cm; left: 3cm">
                        GUATEMALA, <span t-field="o.payment_date"/>
                    </div>
                    <div style="font-size: 110%; position: absolute; top: 1.7cm; left: 16.9cm">
                        <span t-esc="'{0:,.2f}'.format(o.amount)"/>
                    </div>
                    <div style="font-size: 110%; position: absolute; top: 2.6cm; left: 3cm; width: 15cm">
                        <span t-field="o.partner_id.name"/>
                    </div>
                    <div style="font-size: 110%; text-transform: uppercase; position: absolute; top: 3.6cm; left: 2cm; width: 15cm">
                        <span t-esc="a_letras.num_a_letras(o.amount)"/>
                    </div>
                    <div style="font-size: 110%; position: absolute; top: 8.7cm; left: 2cm; width: 15cm">
                        <span t-field="o.communication"/>
                    </div>

		    <div style="font-size: 110%; position: absolute; top:15cm; left: 6.0cm">
                        GUATEMALA, <span t-field="o.payment_date"/>
                    </div>
		    <div style="font-size: 110%; position: absolute; top: 15.5cm; left: 6.0cm; width: 15cm">
                        <span t-field="o.partner_id.name"/>
                    </div>


                    <div style="position: absolute; top: 11cm; left: 0cm">
                        <table>
                           <tbody>
                                <tr t-foreach="o.move_line_ids" t-as="l">
                                    <td style="width: 0cm">
                                       <span t-field="l.account_id.code"/>
                                    </td>
                                    <td style="width: 2cm">
                                    </td>
                                    <td style="width: 11.5cm">
                                        <span t-field="l.account_id.name"/>
                                    </td>
                                    <td style="width: 1.7cm" class="text-right">
                                        <span t-field="l.debit" t-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                    <td style="width: 0.7cm">
                                    </td>
                                    <td style="width: 2cm" class="text-right">
                                        <span t-field="l.credit" t-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div style="position: absolute; top: 21.5cm; left: 0.5cm">
                        <table>
                           <tbody>
                                <tr>
                                    <td style="width: 13.6cm">
                                    </td>
                                    <td style="width: 2.9cm" class="text-right">
                                        <span t-esc="totales(o)['debito']" t-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                    <td style="width: 0.7cm">
                                    </td>
                                    <td style="width: 2cm" class="text-right">
                                        <span t-esc="totales(o)['credito']" t-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div style="position: absolute; top: 23.0cm; left: 0cm">
                        <table>
                           <tbody>
                                <tr>
                                    <td style="width: 0cm">
                                        <span t-field="user.name"/>
                                    </td>
                                    <td style="width: 1">
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>
            </t>
        </t>
    </template>
</odoo>
