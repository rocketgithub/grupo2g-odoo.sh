<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="reporte_account_invoice1">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <div class="oe_structure"/>

                    <div style="position: absolute; top: 4.2cm; left: 17.7cm">
                        <span t-esc="dia(o)"/>
                    </div>
                    <div style="position: absolute; top: 4.2cm; left: 20.4cm">
                        <span t-esc="mes(o)"/>
                    </div>
                    <div style="position: absolute; top: 4.2cm; left: 22.7cm">
                        <span t-esc="anio(o)"/>
                    </div>
                    <div style="position: absolute; top: 4.9cm; left: 4.0cm">
                        <span t-field="o.partner_id.name"/>
                    </div>
                    <div style="position: absolute; top: 6.2cm; left: 18.4cm">
                        <span t-field="o.partner_id.vat"/>
                    </div>
                    <div style="position: absolute; top: 5.6cm; left: 4.5cm">
                        <span t-field="o.partner_id.street"/>
                    </div>

                    <div style="position: absolute; top: 8.0cm; left: 1.9cm">
                        <table>
                            <tbody>
                                <tr t-foreach="o.invoice_line_ids" t-as="l">
                                    <td style="width: 2.5cm">
                                        <span t-field="l.quantity"/>
                                    </td>
                                    <td style="width: 13.5cm">
                                        <span t-field="l.product_id.default_code"/>
                                        <span t-esc="producto(l.name)"/>
                                    </td>
                                    <td style="width: 3.5cm" class="text-right">
                                        <span t-esc="total_linea(l)" t-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div style="position: absolute; top: 10.4cm; left: 1.5cm">
                        <table>
                            <tbody>
                                <tr t-foreach="impuesto_impresos(o)" t-as="t">
                                    <td style="width: 2.0cm">
                                    </td>
                                    <td style="width: 10.5cm">
                                        <span t-esc="t['nombre']"/>
                                    </td>
                                    <td style="width: 6.5cm" class="text-right">
                                        <span t-esc="t['valor']" t-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div style="position: absolute; top: 14.3cm; left: 19.8cm">
                        <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                    </div>

                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>
</odoo>
