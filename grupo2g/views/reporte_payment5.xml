<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="reporte_account_payment5">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">

                    <div style="font-size: 110%; position: absolute; top: 4.9cm; left: 6.0cm">
                        GUATEMALA, <span t-field="o.payment_date"/>
                    </div>
                    <div style="font-size: 110%; position: absolute; top: 6cm; left: 12.5cm">
                        <span t-esc="'{0:,.2f}'.format(o.amount)"/>
                    </div>
                    <div style="font-size: 110%; position: absolute; top: 6cm; left: 1cm; width: 9cm">
                        <span t-field="o.partner_id.name"/>
                    </div>
                    <div style="font-size: 110%; text-transform: uppercase; position: absolute; top: 7cm; left: 1cm; width: 9cm">
                        <span t-esc="a_letras.num_a_letras(o.amount)"/>
                    </div>
		    
		    <div style="font-size: 110%; position: absolute; top: 14.5cm; left: 1cm; width: 9cm">
                        <span t-field="o.communication"/>
                    </div>

		    <div style="font-size: 110%; position: absolute; top:14cm; left: 1cm">
                        GUATEMALA, <span t-field="o.payment_date"/>
                    </div>
		    <div style="font-size: 110%; position: absolute; top: 15cm; left: 1cm; width: 9cm">
                        <span t-field="o.partner_id.name"/>
                    </div>


                    <div style="position: absolute; top: 12.4cm; left: 0.5cm">
                        <table>
                           <tbody>
                                <tr t-foreach="o.move_line_ids" t-as="l">
                                    <td style="width: 0.5cm">
                                    </td>
                                    <td style="width: 0.5cm">
                                       <span t-field="l.account_id.code"/>
                                    </td>
                                    <td style="width: 3.5cm">
                                    </td>
                                    <td style="width: 16cm">
                                        <span t-field="l.account_id.name"/>
                                    </td>
                                    <td style="width: 3.1cm" class="text-right">
                                        <span t-field="l.debit" t-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                    <td style="width: 2cm">
                                    </td>
                                    <td style="width: 3.1cm" class="text-right">
                                        <span t-field="l.credit" t-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div style="position: absolute; top: 17.5cm; left: 0.5cm">
                        <table>
                           <tbody>
                                <tr>
                                    <td style="width: 21cm">
                                    </td>
                                    <td style="width: 2.5cm" class="text-right">
                                        <span t-esc="totales(o)['debito']" t-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                    <td style="width: 2cm">
                                    </td>
                                    <td style="width: 3cm" class="text-right">
                                        <span t-esc="totales(o)['credito']" t-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

		    <div style="font-size: 110%; position: absolute; top: 17cm; left: 1cm; width: 9cm">
                        <span t-field="o.destination_journal_id.name"/>
                    </div>

                    <div style="font-size: 110%; position: absolute; top: 17.5cm; left: 1cm; width: 9cm">
                        <span t-field="o.destination_journal_id.default_credit_account_id.name"/>
                    </div>

                    <div style="font-size: 110%; position: absolute; top: 16cm; left: 1cm; width: 9cm">
                        <span t-field="o.move_name"/>
                    </div>


                    <div style="position: absolute; top: 18cm; left: 1cm">
                        <table>
                           <tbody>
                                <tr>
                                    <td style="width: 0cm">
                                        <span t-field="user.name"/>
                                    </td>
                                    <td style="width: 1">
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>
            </t>
        </t>
    </template>
</odoo>
